{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ES2023",
    "lib": [
      "ES2023",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}